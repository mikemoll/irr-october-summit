<!DOCTYPE html>
<html>
  <head>
    <title>Testing</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
      <label>Email</label>
    <input type="text" id="email" name="email" />
    <br />
    <button id="btn" onclick="onSubmit()">Submit</button><br/><br/>
    <div id="tags" name="tags"></div>
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script>
      function onSubmit() {
        const tagId = "AP MIC"
        const eleEmail = $("#email");
        const email = (eleEmail.val() + "").trim();
        if (!email) {
          eleEmail.focus();
          return;
        }
        $.ajax({
          type: "POST",
          url: "/handleForm",
          data: {
            tag:tagId,
            email: email,
          },
          statusCode: {
            200: (data) => {
              // for(var i=0;i<data.length;i++){              
              //   $('#tags').append(`<b>${data[i].tag.name} - ${data[i].tag.id}</b><br/><br/>`)
              // }
              window.location.replace(data)
              eleEmail.val("");
            },
            204: () => {
              console.log("Not Found");
              eleEmail.val("");
            },
            400: () => {
              console.log("Somthing went wrong try after 1 year");
              eleEmail.val("");
            },
          },
          error: () => {
            console.log("Somthing went wrong try after Some Time");
            eleEmail.val("");
          },
        });
      }
    </script>
  </body>
   
</html>
